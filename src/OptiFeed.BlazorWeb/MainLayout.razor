@inherits LayoutComponentBase

<MApp>
    <RadzenComponents />
    <!--SideBar-->
    <MContainer>
        <MRow>
            <MNavigationDrawer Absolute ExpandOnHover Color="#9E9E9E">
                <MList>
                    <MListItem Link>
                        <MListItemContent>
                            <MListItemTitle Class="text-h6">
                                OptiFeed
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
                <MList Nav Dense>
                    <MListItem Link Href="/" Style="padding: unset">
                        <MListItemIcon>
                            <MIcon Large="true">mdi-cow</MIcon>
                        </MListItemIcon>
                        <MListItemTitle Style="font-size: larger">Animals</MListItemTitle>
                    </MListItem>
                    <MListItem Link Href="/feeds" Style="padding: unset">
                        <MListItemIcon>
                            <MIcon Large="true">mdi-sprout</MIcon>
                        </MListItemIcon>
                        <MListItemTitle Style="font-size: larger">Feeds</MListItemTitle>
                    </MListItem>
                    <MListItem Link Href="/" Style="padding: unset">
                        <MListItemIcon>
                            <MIcon Large="true">mdi-silo</MIcon>
                        </MListItemIcon>
                        <MListItemTitle Style="font-size: larger">Stocks</MListItemTitle>
                    </MListItem>
                    <MDivider></MDivider>

                    <MListItem Link Href="/solver" Style="padding: unset">
                        <MListItemIcon>
                            <MIcon Large="true">mdi-math-integral-box</MIcon>
                        </MListItemIcon>
                        <MListItemTitle Style="font-size: larger">Solver</MListItemTitle>
                    </MListItem>

                </MList>

            </MNavigationDrawer>
        </MRow>
    </MContainer>

    <!--TopBar-->
    <MAppBar App Color="#BDBDBD">
        <MIcon Large Color="success">mdi-sprout-outline</MIcon>
        <MAppBarTitle Style="font-size:32px;">OptiFeed</MAppBarTitle>
        <MSpacer></MSpacer>
        <MButton Icon>
            <MIcon>mdi-github</MIcon>
        </MButton>
        <MButton Icon>
            <MIcon>mdi-heart</MIcon>
        </MButton>
    </MAppBar>
    <!--Content-->
    <MMain>
        <MContainer>
            @Body
        </MContainer>
    </MMain>
    <!--Footer-->
    <MFooter Absolute App Color="#9E9E9E">
        <MCol Class="text-center" Cols="12">
            @DateTime.Now.Year - <strong>OptiFeed</strong>
        </MCol>
    </MFooter>
</MApp>


